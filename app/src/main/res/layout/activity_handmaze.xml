<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:src="@drawable/tiankong2"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_current_guanka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/checkoutpoint"/>

        <TextView
            android:id="@+id/tv_current_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:text="@string/currentStep"/>
        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/currentTime"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_bg"/>
        <com.uestc.mode.mazeadventure.view.MazeView
            android:id="@+id/maze_view"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/small_girl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gongzhuxiao"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"/>
        <ImageView
            android:id="@+id/girl_big"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gongzhu"
            />
        <RelativeLayout
            android:id="@+id/controlView"
            android:layout_gravity="bottom"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:background="#4dffffff"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/top_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle_up"
                android:padding="8dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/bottom_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle_down"
                android:padding="8dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/left_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle_left"
                android:padding="8dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/right_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle_right"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/rate_dialog_bg">
        <TextView
            android:id="@+id/generate_maze_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="皇家天眼探路"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/whitesmoke"/>
        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/generate_maze_action_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="公主，我来了"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/whitesmoke"
            />
        <TextView
            android:id="@+id/exitTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="蓦然回首，公主又被抓走了"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="@color/whitesmoke"/>
    </LinearLayout>
</LinearLayout>
